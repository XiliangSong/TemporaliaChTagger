<?xml version="1.0" encoding="UTF-8"?>
<cpeDescription xmlns="http://uima.apache.org/resourceSpecifier">
    <collectionReader>
        <collectionIterator>
            <descriptor>
                <import location="reader/SogouTCollectionReader.xml"/>
            </descriptor>
        </collectionIterator>
    </collectionReader>
    <casProcessors casPoolSize="3" processingUnitThreadCount="1">
    <casProcessor deployment="integrated" name="StanfordCoreNLPWrapper">
        <descriptor>
            <import location="annotator/StanfordCoreNLPWrapper.xml"/>
        </descriptor>
            <deploymentParameters/>
        <errorHandling>
            <errorRateThreshold action="terminate" value="0/1000"/>
            <maxConsecutiveRestarts action="terminate" value="30"/>
            <timeout max="100000" default="-1"/>
        </errorHandling>
        <checkpoint batch="10000" time="1000ms"/>
    </casProcessor>
    <casProcessor deployment="integrated" name="HeidelTime">
        <descriptor>
            <import location="annotator/HeidelTime.xml"/>
        </descriptor>
            <deploymentParameters/>
        <errorHandling>
            <errorRateThreshold action="terminate" value="0/1000"/>
            <maxConsecutiveRestarts action="terminate" value="30"/>
            <timeout max="100000" default="-1"/>
        </errorHandling>
        <checkpoint batch="10000" time="1000ms"/>
    </casProcessor>
    <casProcessor deployment="integrated" name="SogouTCollectionWriter">
        <descriptor>
            <import location="comsumer/SogouTCollectionWriter.xml"/>
        </descriptor>
            <deploymentParameters/>
        <errorHandling>
            <errorRateThreshold action="terminate" value="0/1000"/>
            <maxConsecutiveRestarts action="terminate" value="30"/>
            <timeout max="100000" default="-1"/>
        </errorHandling>
        <checkpoint batch="10000" time="1000ms"/>
    </casProcessor>
    </casProcessors>
    <cpeConfig>
        <numToProcess>-1</numToProcess>
        <deployAs>immediate</deployAs>
        <checkpoint batch="0" time="300000ms"/>
        <timerImpl/>
    </cpeConfig>
</cpeDescription>
